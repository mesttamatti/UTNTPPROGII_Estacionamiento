#include <iostream>
#include <iomanip> 
using namespace std;

void mostrarCalendario(int ano, int mes) {
    int diasEnMes[] = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
    if ((ano % 4 == 0 && ano % 100 != 0) || ano % 400 == 0) {
        diasEnMes[1] = 29; 
    }

    string meses[] = {"Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"};
    int dia = 1; 

    cout << "    " << meses[meses - 1] << " " << ano << endl;
    cout << "Do Lu Ma Mi Ju Vi Sa" << endl;

    
    int diaInicial = 1;

   
    for (int i = 0; i < diaInicial; ++i) {
        cout << "   ";
    }

    for (int i = 1; i <= diasEnMes[mes - 1]; ++i) {
        cout << setw(2) << i << " ";
        if ((i + diaInicial) % 7 == 0) {
            cout << endl;
        }
    }
    cout << endl;
}

int main() {
    int ano, mes;
    cout << "Introduce el aÃ±o: ";
    cin >> ano;
    cout << "Introduce el mes (1-12): ";
    cin >> mes;

   mostarCalendario(ano, mes);

    return 0;
}
