#include <iostream>
#include <iomanip> // Para std::setw
using namespace std;

void printCalendar(int year, int month) {
    int daysInMonth[] = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
    if ((year % 4 == 0 && year % 100 != 0) || year % 400 == 0) {
        daysInMonth[1] = 29; // Año bisiesto
    }

    string months[] = {"Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"};
    int day = 1; // Empezamos el calendario desde el día 1

    cout << "    " << months[month - 1] << " " << year << endl;
    cout << "Do Lu Ma Mi Ju Vi Sa" << endl;

    // Vamos a asumir que el primer día del mes comienza en lunes (por simplicidad)
    int startDay = 1;

    // Imprimir espacios para los días hasta el primer día del mes
    for (int i = 0; i < startDay; ++i) {
        cout << "   ";
    }

    for (int i = 1; i <= daysInMonth[month - 1]; ++i) {
        cout << setw(2) << i << " ";
        if ((i + startDay) % 7 == 0) {
            cout << endl;
        }
    }
    cout << endl;
}

int main() {
    int year, month;
    cout << "Introduce el año: ";
    cin >> year;
    cout << "Introduce el mes (1-12): ";
    cin >> month;

    printCalendar(year, month);

    return 0;
}
